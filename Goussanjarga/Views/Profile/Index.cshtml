@model Microsoft.Graph.User
@{
    ViewData["Title"] = "User Profile fetched from MS Graph";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h1>Signed-in user's Profile</h1>

@if (Model != null && Model.Id != null)
{
    <table class="table table-striped table-condensed" style="font-family: monospace" border="1">
        <thead>
            @{
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        @Model.Id
                    </th>
                    <th></th>
                </tr>
                <tr>
                    <th>
                        Display Name
                    </th>
                    <th>
                        @Model.DisplayName
                    </th>
                    <th></th>
                </tr>
                <tr>
                    <th>
                        Mail
                    </th>
                    <th>
                        @Model.Mail
                    </th>
                    <th></th>
                </tr>
                <tr>
                    <th>
                        UserPrincipalName
                    </th>
                    <th>
                        @Model.UserPrincipalName
                    </th>
                    <th></th>
                </tr>
            }
        </thead>
        <tbody>
        </tbody>
    </table>
}
else
{
    <div>
        No Profile Data Available
    </div>
}